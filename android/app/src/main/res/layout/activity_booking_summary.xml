<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primaryBackground">



    <!-- Main Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:clipToPadding="false">

            <!-- Passenger Details Card -->
            <LinearLayout
                android:id="@+id/cardPassenger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/booking_card_elevated"
                android:orientation="vertical"
                android:padding="20dp"
                android:elevation="8dp">

                <!-- Card Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/journey_timeline_bg"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_profile"
                            android:contentDescription="@string/profile_icon"
                            app:tint="@color/primary" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="@string/passenger_details"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/darkIndigo"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- Full Name Input -->
                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="16dp"
                    android:hint="@string/hint_full_name"
                    android:inputType="textPersonName"
                    android:autofillHints="name"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:background="@drawable/premium_card_background"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/darkIndigo"
                    android:textColorHint="@color/lightGray" />

                <!-- Age and Gender Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <EditText
                        android:id="@+id/etAge"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="12dp"
                        android:hint="@string/hint_age"
                        android:inputType="number"
                        android:autofillHints="birthYear"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:background="@drawable/premium_card_background"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textColor="@color/darkIndigo"
                        android:textColorHint="@color/lightGray" />

                    <Spinner
                        android:id="@+id/spinnerGender"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:spinnerMode="dropdown"
                        android:background="@drawable/premium_card_background"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Pricing & Payment Card -->
            <LinearLayout
                android:id="@+id/cardPricing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/booking_card_elevated"
                android:orientation="vertical"
                android:padding="20dp"
                android:elevation="8dp">

                <!-- Price Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/journey_timeline_bg"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_ticket"
                            android:contentDescription="@string/ticket_icon"
                            app:tint="@color/primary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_fare"
                            android:textSize="11sp"
                            android:textColor="@color/lightGray"
                            android:letterSpacing="0.1"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/amount_placeholder"
                            android:textStyle="bold"
                            android:textSize="24sp"
                            android:textColor="@color/primary"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/progressBooking"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:indeterminateTint="@color/primary" />

                <!-- Error Message -->
                <TextView
                    android:id="@+id/tvError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textColor="@color/error"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/error_background"
                    android:padding="12dp" />

                <!-- Confirm Button -->
                <Button
                    android:id="@+id/btnConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="@string/confirm"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/primary"
                    android:elevation="4dp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Booking Success Card - Professional Design -->
            <LinearLayout
                android:id="@+id/cardResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/booking_card_elevated"
                android:backgroundTint="#F0FDF4"
                android:orientation="vertical"
                android:padding="24dp"
                android:elevation="8dp">

                <!-- Success Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="24dp">

                    <!-- Success Icon with background -->
                    <LinearLayout
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="@drawable/circle_white_background"
                        android:gravity="center"
                        android:elevation="4dp"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_check_circle"
                            android:contentDescription="@string/success_icon"
                            app:tint="@color/success" />

                    </LinearLayout>

                    <!-- Success Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Booking Confirmed!"
                        android:textSize="22sp"
                        android:textColor="@color/success"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp" />

                    <!-- Subtitle -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your ticket has been successfully booked"
                        android:textSize="14sp"
                        android:textColor="@color/darkBlue"
                        android:fontFamily="sans-serif"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Ticket Information Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/premium_card_background"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“‹ Ticket Details"
                        android:textSize="16sp"
                        android:textColor="@color/darkIndigo"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp" />

                    <!-- Ticket ID -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ticket ID:"
                            android:textSize="14sp"
                            android:textColor="@color/darkBlue"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvTicketId"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="TKT-123456"
                            android:textSize="14sp"
                            android:textColor="@color/darkIndigo"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <!-- Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status:"
                            android:textSize="14sp"
                            android:textColor="@color/darkBlue"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvTicketStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Confirmed"
                            android:textSize="14sp"
                            android:textColor="@color/success"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <!-- Expiry -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Valid until:"
                            android:textSize="14sp"
                            android:textColor="@color/darkBlue"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvTicketExpiry"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Dec 10, 2025 â€¢ 11:59 PM"
                            android:textSize="14sp"
                            android:textColor="@color/darkIndigo"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Passenger Information Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/premium_card_background"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¤ Passenger Information"
                        android:textSize="16sp"
                        android:textColor="@color/darkIndigo"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp" />

                    <!-- Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name:"
                            android:textSize="14sp"
                            android:textColor="@color/darkBlue"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvPassengerName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mohammad Mojahid"
                            android:textSize="14sp"
                            android:textColor="@color/darkIndigo"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <!-- Age & Gender -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_marginEnd="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Age:"
                                android:textSize="14sp"
                                android:textColor="@color/darkBlue"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:id="@+id/tvPassengerAge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25"
                                android:textSize="14sp"
                                android:textColor="@color/darkIndigo"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gender:"
                                android:textSize="14sp"
                                android:textColor="@color/darkBlue"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:id="@+id/tvPassengerGender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Male"
                                android:textSize="14sp"
                                android:textColor="@color/darkIndigo"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- Important Notice -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/journey_timeline_bg"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â° Important Notice"
                        android:textSize="14sp"
                        android:textColor="@color/darkBlue"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your seat is reserved for 15 minutes. Please complete payment within this time to avoid cancellation."
                        android:textSize="13sp"
                        android:textColor="@color/darkIndigo"
                        android:fontFamily="sans-serif"
                        android:lineSpacingMultiplier="1.2" />

                </LinearLayout>

                <!-- Next Steps -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/primary"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’³ Next Step"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Complete payment to confirm your ticket and receive confirmation details via email."
                        android:textSize="13sp"
                        android:textColor="#E3F2FD"
                        android:fontFamily="sans-serif"
                        android:lineSpacingMultiplier="1.2" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Fixed Bottom Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="20dp"
        android:background="@android:color/white"
        android:elevation="16dp">

        <!-- Pay Button - Always Visible at Bottom -->
        <Button
            android:id="@+id/btnPay"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/pay"
            android:textAllCaps="false"
            android:visibility="gone"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/primary"
            android:elevation="4dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Done Button - Always Visible at Bottom -->
        <Button
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/done"
            android:textAllCaps="false"
            android:visibility="gone"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/primary"
            android:elevation="4dp"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

</LinearLayout>
