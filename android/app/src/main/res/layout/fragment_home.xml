<?xml version="1.0" encoding="utf-8"?><!-- ULTRA MODERN HOME DESIGN - STYLISH RAILWAY APP -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FD"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".home.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Elegant Header Section with Curved Background -->
        <RelativeLayout
            android:id="@+id/headerSection"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/premium_gradient_background"
            android:paddingStart="24dp"
            android:paddingTop="40dp"
            android:paddingEnd="24dp"
            android:paddingBottom="0dp">



            <!-- Journey Title -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:letterSpacing="-0.02"
                    android:text="@string/plan_your"
                    android:textColor="#FFFFFF"
                    android:textSize="32sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="-0.02"
                    android:text="@string/perfect_journey"
                    android:textColor="#FFFFFF"
                    android:textSize="32sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Main Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/headerSection"
            android:orientation="vertical">

            <!-- Premium Search Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/searchCardFloating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="28dp"
                android:layout_margin="20sp"
                android:padding="10dp"
                app:cardElevation="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- From Station -->
                    <RelativeLayout
                        android:id="@+id/fromLocationLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/search_bar_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="18dp">

                        <ImageView
                            android:id="@+id/iconFrom"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:contentDescription="@string/from"
                            android:src="@drawable/ic_pin"
                            app:tint="#5B67CA" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/iconFrom"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.08"
                                android:text="@string/from"
                                android:textAllCaps="true"
                                android:textColor="#9CA3AF"
                                android:textSize="11sp" />

                            <AutoCompleteTextView
                                android:id="@+id/actv_from"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:background="@null"
                                android:backgroundTint="@null"
                                android:completionThreshold="1"
                                android:fontFamily="sans-serif-medium"
                                android:hint="@string/select_station"
                                android:inputType="text"
                                android:textColor="#1F2937"
                                android:textColorHint="#D1D5DB"
                                android:textSize="17sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <!-- To Station -->
                    <RelativeLayout
                        android:id="@+id/toLocationLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/search_bar_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="18dp">

                        <ImageView
                            android:id="@+id/iconTo"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:contentDescription="@string/to"
                            android:src="@drawable/ic_train"
                            app:tint="#EF4444" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@id/iconTo"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.08"
                                android:text="@string/to"
                                android:textAllCaps="true"
                                android:textColor="#9CA3AF"
                                android:textSize="11sp" />

                            <AutoCompleteTextView
                                android:id="@+id/actv_to"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:background="@null"
                                android:backgroundTint="@null"
                                android:completionThreshold="1"
                                android:fontFamily="sans-serif-medium"
                                android:hint="@string/select_station"
                                android:inputType="text"
                                android:textColor="#1F2937"
                                android:textColorHint="#D1D5DB"
                                android:textSize="17sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <!-- Date Selection -->
                    <RelativeLayout
                        android:id="@+id/dateSelectLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/search_bar_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="18dp">

                        <ImageView
                            android:id="@+id/iconCalendar"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:contentDescription="@string/date_selection"
                            android:src="@drawable/ic_calendar"
                            app:tint="#5B67CA" />

                        <TextView
                            android:id="@+id/tvSelectedDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toStartOf="@id/iconArrowDate"
                            android:layout_toEndOf="@id/iconCalendar"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/today_date"
                            android:textColor="#1F2937"
                            android:textSize="17sp" />

                        <ImageView
                            android:id="@+id/iconArrowDate"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:contentDescription="@string/arrow_icon"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="#9CA3AF" />
                    </RelativeLayout>

                    <!-- Search Button -->
                    <Button
                        android:id="@+id/btnSearchTrains"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.01"
                        android:stateListAnimator="@null"
                        android:text="@string/search_trains"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="@color/primary"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

