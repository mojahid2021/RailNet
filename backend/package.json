{
  "name": "railnet-backend",
  "version": "1.0.0",
  "description": "Railway management application backend built with Fastify and TypeScript",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "fastify": "^4.22.0",
    "@fastify/cors": "^8.3.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^8.0.3",
    "@fastify/jwt": "^7.2.3",
    "@fastify/swagger": "^8.10.1",
    "@fastify/swagger-ui": "^1.9.3",
    "@prisma/client": "^5.5.2",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "joi": "^17.9.2",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "redis": "^4.6.10"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "ts-node-dev": "^2.0.0",
    "@types/node": "^20.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.4",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.5",
    "@types/supertest": "^2.0.16",
    "supertest": "^6.3.3",
    "eslint": "^8.50.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "prettier": "^3.0.3",
    "prisma": "^5.5.2",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  }
}
